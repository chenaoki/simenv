#!/bin/bash

cmake \
-D CMAKE_BUILD_TYPE:STRING=RELEASE \
\
-D TPL_ENABLE_MPI:BOOL=ON \
\
-D ParMETIS_INCLUDE_DIRS:PATH=/usr/include/ \
-D ParMETIS_LIBRARY_DIRS:PATH=/usr/lib/ \
\
-D TPL_ENABLE_UMFPACK:BOOL=ON \
\
-D TPL_ENABLE_BLAS:BOOL=ON \
-D BLAS_LIBRARY_DIRS:PATH=/usr/lib/ \
-D BLAS_LIBRARY_NAMES:STRING="blas" \
\
-D TPL_ENABLE_LAPACK:BOOL=ON \
-D LAPACK_LIBRARY_DIRS:PATH=/usr/lib/ \
-D LAPACK_LIBRARY_NAMES:STRING="lapack" \
\
-D TPL_ENABLE_Boost:BOOL=ON \
-D TPL_Boost_INCLUDE_DIRS:STRING=/usr/include/boost/ \
\
-D TPL_ENABLE_Trilinos:STRING=ON \
-D Trilinos_INCLUDE_DIRS:PATH=~/simenv/Trilinos/install/include/ \
-D Trilinos_LIBRARY_DIRS:PATH=~/simenv/Trilinos/install/lib/ \
\
-D LifeV_VERBOSE_CONFIGURE:BOOL=OFF \
-D CMAKE_VERBOSE_MAKEFILE:BOOL=ON \
\
-D LifeV_ENABLE_STRONG_CXX_COMPILE_WARNINGS:BOOL=OFF \
\
-D LifeV_ENABLE_Heart:STRING=ON \
\
-D LifeV_ENABLE_ALL_PACKAGES:BOOL=ON \
-D LifeV_ENABLE_TESTS:BOOL=OFF \
-D LifeV_ENABLE_EXAMPLES:BOOL=OFF \
-D CMAKE_INSTALL_PREFIX:PATH=../install \
\
-D LifeV_ENABLE_CPP11:BOOL=ON \
\
$EXTRA_ARGS \
../
